# ========================================
# Variables de Entorno - Producción Netlify
# Madres Digitales Backend
# ========================================

# Configuración del Servidor
NODE_ENV=production
PORT=3000

# Base de Datos PostgreSQL (Proporcionada por Netlify o externa)
DATABASE_URL=postgresql://usuario:password@host:puerto/database?sslmode=require

# Configuración CORS para producción Netlify
CORS_ORIGINS=https://madresdigitales.netlify.app,https://www.madresdigitales.com

# JWT Secrets (Generar nuevos para producción)
JWT_SECRET=tu_jwt_secret_muy_seguro_aqui
JWT_REFRESH_SECRET=tu_jwt_refresh_secret_muy_seguro_aqui
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Configuración de Archivos (Netlify o servicio externo)
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=50MB

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Servicios Externos (opcional)
# Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu_email@dominio.com
SMTP_PASSWORD=tu_app_password

# Storage (si se usa servicio externo para archivos)
AWS_ACCESS_KEY_ID=tu_access_key
AWS_SECRET_ACCESS_KEY=tu_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=tu_bucket

# Monitoreo (opcional)
SENTRY_DSN=tu_sentry_dsn
NEW_RELIC_LICENSE_KEY=tu_new_relic_key

# Seguridad
BCRYPT_ROUNDS=12
SESSION_SECRET=tu_session_secret_muy_seguro

# API Keys (si se usan servicios externos)
GOOGLE_MAPS_API_KEY=tu_google_maps_api_key
TWILIO_ACCOUNT_SID=tu_twilio_sid
TWILIO_AUTH_TOKEN=tu_twilio_token

# Netlify Specific
NETLIFY_BUILD_TIMEOUT=30
NETLIFY_FUNCTIONS_TIMEOUT=25

# WebSocket (desactivado en Netlify Functions)
WS_ENABLED=false